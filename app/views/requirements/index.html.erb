<h1>Listing requirements</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>

<% @requirements.each do |requirement| %>
  <tr>
    <td><%= requirement.title %></td>
    <td><%= requirement.description %></td>
    <td><%= link_to 'Show', user_requirement_path(@user,requirement) %></td>
    <td><%= link_to 'Edit', edit_user_requirement_path(@user,requirement) %></td>
    <td><%= link_to 'Destroy', [@user, requirement], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Requirement', new_user_requirement_path %>
